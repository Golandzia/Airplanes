<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Airplanes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0A597E</item>
        <item name="android:navigationBarColor">#084460</item>
        <item name="colorPrimaryVariant">#084460</item>
        <item name="colorOnPrimary">#FFB0E2E8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.Airplanes.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/ic_launcher_background</item>
        <item name="fullscreenTextColor">@color/ic_launcher_background</item>
    </style>
    <style name="Theme.Airplanes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Airplanes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Airplanes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>